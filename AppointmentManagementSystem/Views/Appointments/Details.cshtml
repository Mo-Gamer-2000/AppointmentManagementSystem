
@model AppointmentManagementSystem.ViewModels.ViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <!-- Displays a list of the appointments details -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetails.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetails.FirstName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetails.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetails.LastName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetails.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetails.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAppointments.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAppointments.UserEmail)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAppointments.AppointmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAppointments.AppointmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAppointments.AppointmentTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAppointments.AppointmentTime)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAppointments.AppointmentSubject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAppointments.AppointmentSubject)
        </dd>
    </dl>
</div>
<div>
    <!-- If this appointment is not archived we can also chose to edit the appointment
        This routes to the edit action model passing in this appointments id
    -->
    @if (!ArchiveStateSingleton.Instance.IsViewingArchivedAppointments)
    {
        <a asp-action="Edit" asp-route-id="@Model?.UserAppointments.AppointmentId">Edit</a>
    }
    <!-- We can also choose to return back to the index page from here -->
    <a asp-action="Index">Back to List</a>
</div>
